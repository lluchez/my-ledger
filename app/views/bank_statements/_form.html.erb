<%
  next_year = Date.today.year + 1
  years = (0..BankStatementsController::NB_YEARS-1).map{ |i| next_year-i }
%>
<%= form_for(bank_statement, :html => {:class => "form-horizontal center"}) do |f| %>
  <%= render :partial => "layouts/form_errors_panel", :locals => {:object => bank_statement} %>

  <div class="form-group">
    <%= f.label :month, "Period:", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%=
        f.select :month,
          options_for_select(@months, bank_statement.month),
          {:prompt => "<Month>"},
          {:class => "form-control", :required => true}
      %>
    </div>
    <div class="col-md-4">
      <%=
        f.select :year,
          options_for_select(years, bank_statement.year),
          {:prompt => "<Year>"},
          {:class => "form-control", :required => true}
      %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :bank_account_id, "Bank account:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :bank_account_id,
        options_for_select(@bank_accounts, bank_statement.bank_account_id),
        {:prompt => "<Select a Bank Account>"},
        {:class => "form-control", :required => true}
      %>
    </div>
  </div>


 <% if bank_statement.new_record? %>
    <div class="form-group">
      <%= f.label :records_text, "Records:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :records_text, class: "form-control", :required => true, :value => '', :rows => 10 %>
      </div>
    </div>
<% end %>

  <div class="actions">
    <%= f.submit :class => "btn btn-success pull-right" %>
    <%= link_to bank_statements_path, class: "btn btn-link pull-right" do %>
      <i class="glyphicon glyphicon-arrow-left"></i> Back to Stamenents list
    <% end %>
  </div>
<% end %>
