<p>
  <strong>Name:</strong>
  <%= @bank_statement.name %>
</p>

<p>
  <strong>Bank Account:</strong>
  <%= @bank_statement.bank_account.name %>
</p>

<h2>Transactions</h2>
<table class="table table-manage table-responsive table-striped table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bank_statement.records.each do |record| %>
      <tr>
        <td><%= record.date.strftime('%F') %></td>
        <td><%= record.description %></td>
        <!--<td><%
        # link_to record.description, record
        %></td>-->
        <td><%= number_to_currency(record.amount) %></td>
        <td class="actions">
          <% if false %>
          <%= link_to '', edit_statement_record_path(bank_account), class: "icon icon-edit" %>
          <%= link_to '', record, class: "icon icon-delete", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="actions">
  <%= link_to edit_bank_statement_path(@bank_statement), :class => "btn btn-primary pull-right" do %>
    <i class="glyphicon glyphicon-pencil"></i> Edit Bank Statements
  <% end %>
  <%= link_to bank_statements_path, class: "btn btn-link pull-right" do %>
    <i class="glyphicon glyphicon-arrow-left"></i> Back to Statements list
  <% end %>
</div>
