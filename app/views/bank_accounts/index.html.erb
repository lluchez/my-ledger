<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Bank Accounts</li>
</ol>

<table class="<%= ApplicationController::TABLE_CLASS %> centered-except-first-col">
  <thead>
    <tr>
      <th>Account Name</th>
      <th>Statement Parser</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= link_to(bank_account.name, bank_account) %></td>
        <td><%= bank_account.parser.name %></td>
        <td class="actions">
          <%= link_to('', edit_bank_account_path(bank_account), class: "icon icon-edit") %>
          <%= link_to('', bank_account, class: "icon icon-delete", method: :delete, data: { confirm: 'Are you sure?' }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to(new_bank_account_path, class: "btn btn-primary pull-right") do %>
  <i class="<%= Icons::ADD %>"></i> New Bank Account
<% end %>
